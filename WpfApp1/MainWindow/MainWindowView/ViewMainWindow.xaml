<Window
	x:Class="WpfApp1.ViewMainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:WpfApp1"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Анализ KPI НИУ ВШЭ"
	Width="525"
	Height="350"
	mc:Ignorable="d">
	<Grid>
		<Menu Margin="0,0,0,289">
			<MenuItem Header="Данные">
				<MenuItem Header="Ручной ввод">
					<MenuItem
						Command="{Binding ViewNewEmplButton}"
						CommandParameter="{Binding}"
						Header="Добавление нового сотрудника" />
					<MenuItem Header="Редактирование существующего сотрудника" />
				</MenuItem>
				<MenuItem Click="MenuItem_Click" Header="Загрузка данных в БД" />
				<MenuItem Click="MenuItem_Click_1" Header="Выгрузка данных из БД" />
			</MenuItem>
			<MenuItem Header="Просмотр">
				<MenuItem
					Command="{Binding ViewEmplButton}"
					CommandParameter="{Binding}"
					Header="Просмотр списка сотрудников" />

			</MenuItem>
			<MenuItem Header="KPI">
				<MenuItem Click="MenuItem_Click_2" Header="Оценка публикационной активности" />
			</MenuItem>
		</Menu>
		<Label
			Width="342"
			Height="69"
			Margin="126,79,49,0"
			HorizontalAlignment="Center"
			VerticalAlignment="Top"
			Content="Добро пожаловать в систему &quot;Анализ KPI НИУ ВШЭ&quot;&#xD;&#xA;&#xD;&#xA;Выберите необходимое действие " />
	</Grid>
</Window>
