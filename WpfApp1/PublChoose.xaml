<Window
	x:Class="WpfApp1.PublChoose"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:WpfApp1"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Выбор подходящего варианта"
	Width="525"
	Height="350"
	mc:Ignorable="d">
	<Grid>
		<Label
			Width="461"
			Height="26"
			Margin="28,10,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Content="Вариант, существующий в базе публикаций" />
		<Label
			Width="455"
			Height="26"
			Margin="34,136,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Content="Вариант, полученный из нового файла" />
		<DataGrid
			x:Name="dataGridOld"
			Width="455"
			Height="90"
			Margin="34,41,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top" />
		<DataGrid
			x:Name="dataGridNew"
			Width="455"
			Height="90"
			Margin="34,167,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top" />
		<Button
			x:Name="buttonAddNew"
			Width="140"
			Height="27"
			Margin="349,282,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Click="buttonAddNew_Click"
			Content="Новый вариант" />
		<Button
			x:Name="buttonOld"
			Width="140"
			Height="27"
			Margin="34,282,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Click="buttonOld_Click"
			Content="Существующий вариант" />

	</Grid>
</Window>
