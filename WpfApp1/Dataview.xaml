<Window
	x:Class="WpfApp1.Dataview"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:WpfApp1"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Просмотр загружаемого файла"
	Width="525"
	Height="350"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="50" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<DataGrid
			x:Name="dataGridView1"
			Grid.Row="0"
			Grid.ColumnSpan="2"
			HorizontalAlignment="Center"
			VerticalAlignment="Top"
			AutoGenerateColumns="True"
			ColumnWidth="*" />
		<Button
			x:Name="buttonView"
			Grid.Row="1"
			Grid.Column="0"
			Width="140"
			Height="40"
			Margin="10,0,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Click="buttonInsert_Click"
			Content="Предпросмотр" />
		<Button
			x:Name="buttonInsertNew"
			Grid.Row="1"
			Grid.Column="1"
			Width="140"
			Height="40"
			Margin="0,0,10,0"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Click="buttonInsertNew_Click"
			Content="Добавить в базу новые &#xD;&#xA;           публикации" />

	</Grid>
</Window>

