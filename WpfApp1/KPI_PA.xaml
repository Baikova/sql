<Window
	x:Class="WpfApp1.KPI_PA"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:WpfApp1"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Оценка публикационной активности"
	Width="525"
	Height="350"
	mc:Ignorable="d">
	<Grid>
		<ComboBox
			x:Name="boxComboDepart"
			Width="413"
			Height="25"
			Margin="28,49,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top" />
		<Label
			Width="204"
			Height="29"
			Margin="30,15,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Content="Департамент" />
		<Button
			x:Name="buttonKPI"
			Width="84"
			Height="18"
			Margin="357,101,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Click="buttonKPI_Click"
			Content="Рассчитать" />
		<TextBox
			x:Name="result"
			Width="409"
			Height="28"
			Margin="32,157,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Text="TextBox"
			TextWrapping="Wrap" />
		<Label
			Width="413"
			Height="28"
			Margin="28,124,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Content="Оценка публикационной активности по выбранному департаменту" />

	</Grid>
</Window>
